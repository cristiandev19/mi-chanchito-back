{
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "node",
    "sourceMap": true,
    "target": "ES2017",
    "outDir": "./dist",
    "baseUrl": "./src",
    "paths": {
      "*": [
        "node_modules/*",
        "*",
        "src/types/*"
      ]
    },
    "skipLibCheck": true,
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ],
}
